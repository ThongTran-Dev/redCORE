<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/redcore/form/fields">
        <field
                name="search_device_tokens"
                type="text"
                label="COM_REDCORE_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
                class="js-enter-submits"
                />
        <field
                name="filter_type"
                type="list"
                label="COM_REDCORE_DEVICE_TOKENS_FILTER_TYPE"
                class="inputbox"
                default=""
                onchange="this.form.submit();"
                >
            <option value="">COM_REDCORE_DEVICE_TOKENS_FILTER_TYPE_OPTION_SELECT</option>
            <option value="android">COM_REDCORE_DEVICE_TOKENS_DEVICE_OPTION_ANDROID</option>
            <option value="ios">COM_REDCORE_DEVICE_TOKENS_DEVICE_OPTION_IOS</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="device_tokens_limit"
                type="rlimitbox"
                class="inputbox input-mini chzn"
                default="25"
                label="JGLOBAL_ORDERING_LIST_LIMIT"
                description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>
